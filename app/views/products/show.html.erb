<div class="row">
  <div class="col-xs-6 col-xs-offset-3">
      <p>
        <strong>Title:</strong>
        <%= @product.title %>
      </p>

      <p>
        <strong>Description:</strong>
        <%= @product.description %>
      </p>

      <p>
        <strong>Price:</strong>
        <%= number_to_currency @product.price %>
      </p>

      <p>
        <strong>Picture:</strong>
        <%= image_tag(@product.picture_url, width: 600) if @product.picture.present? %>
      </p>
  </div>


<!-- .image-container { .image
      }  SCSS -->
  <div class="image-container">
  <p id=""> <%= image_tag((@product.picture_url), :class => 'image') %></p>
  </div>
<!-- .image-container { .image
      }  SCSS -->



</div>
  <p>  <%= link_to 'Edit', edit_product_path(@product) %> |
       <%= link_to 'Back', products_path %>
       <%= link_to 'Destroy', product_path, method: :delete, data: { confirm: 'Are you sure?' } %>

  </p>


<!-- Form for adding comments -->

<%= form_for [@product, Comment.new] do |f| %>
<p>
    <%= f.label :body, "New comment" %><br/>
    <%= f.text_area :body %>
</p>
<p><%= f.submit "Add comment" %></p>
<% end %>

<p id="notice"><%= notice %></p>

<!-- Display all comments -->

<h2>Comments</h2>
<div id="comments">
    <%= render partial: @product.comments %>
</div>


